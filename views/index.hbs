<a href="/customs/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{#each customs}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto mr-auto">
        <h4 style="display: inline; vertical-align: middle;">
          {{ this.name }}
        </h4>
      </div>
      <div class="col-auto">
        <a class="btn btn-secondary" href="./customs/{{ this.id }}">detail</a>
        <a class="btn btn-success" href="./customs/{{ this.id }}/edit">edit</a>
        <form action="./customs/{{ this.id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>